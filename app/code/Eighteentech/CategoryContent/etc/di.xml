<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">	
     <type name="Eighteentech\CategoryContent\Controller\Adminhtml\Category\Image\Banner\Upload">
		<arguments>
			<argument name="imageBannerUploader" xsi:type="object">Magento\Catalog\CategoryImageBannerUpload</argument>
		</arguments>
	</type>
	<virtualType name="Magento\Catalog\CategoryImageBannerUpload" type="Magento\Catalog\Model\ImageUploader">
		<arguments>
			<argument name="baseTmpPath" xsi:type="string">catalog/tmp/category</argument>
			<argument name="basePath" xsi:type="string">catalog/category</argument>
			<argument name="allowedExtensions" xsi:type="array">
				<item name="jpg" xsi:type="string">jpg</item>
				<item name="jpeg" xsi:type="string">jpeg</item>
				<item name="gif" xsi:type="string">gif</item>
				<item name="png" xsi:type="string">png</item>
			</argument>
		</arguments>
	</virtualType>

	
	<preference for="Magento\Catalog\Model\Category\DataProvider" type="Eighteentech\CategoryContent\Model\Category\DataProvider" />
</config>
