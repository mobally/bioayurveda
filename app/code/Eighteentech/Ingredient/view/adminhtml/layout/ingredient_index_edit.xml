<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
        <link src="jquery/fileUploader/bootstrap.js"/>
    </head>
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Eighteentech\Ingredient\Block\Adminhtml\Ingredient\Edit" name="ingredient_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Eighteentech\Ingredient\Block\Adminhtml\Ingredient\Edit\Tabs" name="ingredient_edit_tabs">
                <block class="Eighteentech\Ingredient\Block\Adminhtml\Ingredient\Edit\Tab\Main" name="ingredient_edit_tab_main"/>
                <block class="Eighteentech\Ingredient\Block\Adminhtml\Ingredient\Edit\Tab\Content" name="ingredient_edit_tab_content"/>
                <block class="Eighteentech\Ingredient\Block\Adminhtml\Ingredient\Edit\Tab\Image" name="ingredient_edit_tab_image"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">ingredient_edit_tab_main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">content_section</argument>
                    <argument name="block" xsi:type="string">ingredient_edit_tab_content</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">image_section</argument>
                    <argument name="block" xsi:type="string">ingredient_edit_tab_image</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
