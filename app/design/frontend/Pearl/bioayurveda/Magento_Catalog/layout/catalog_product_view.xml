<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template" name="welpixel.swatch.validation.fix" template="Magento_Catalog::validation_fix.phtml" />
        </referenceContainer>
	<referenceBlock name="product.info.details">
		<block class="Magento\Catalog\Block\Product\View" name="composition.tab" template="Magento_Catalog::product/view/custom_tab.phtml" group="detailed_info" >
		<arguments>
			<argument translate="true" name="title" xsi:type="string">Composition</argument>
			<argument name="sort_order" xsi:type="string">60</argument>
		</arguments>
		</block> 
	</referenceBlock>
    <referenceBlock name="product.info.overview" template="Magento_Catalog::product/view/attribute_welt.phtml" >
		<arguments>
			<argument name="at_call" xsi:type="string">getShortDescription</argument>
			<argument name="at_code" xsi:type="string">short_description</argument>
			<argument name="css_class" xsi:type="string">overview</argument>
			<argument name="at_label" xsi:type="string">Description</argument>
			<argument name="title" translate="true" xsi:type="string">Overview</argument>
			<argument name="add_attribute" xsi:type="string">itemprop="description"</argument>
		</arguments>
	</referenceBlock>          
	<block class="Magento\Catalog\Block\Product\View\Description" name="productinfohowtoapply" template="Magento_Catalog::product/view/attribute_welt.phtml" group="detailed_info" after="product.info.overview">
		<arguments>
			<argument name="at_call" xsi:type="string">getHowToApply</argument>
			<argument name="at_code" xsi:type="string">how_to_apply</argument>
			<argument name="css_class" xsi:type="string">howtoapply</argument>
			<argument name="at_label" xsi:type="string">How To Apply</argument>
			<argument name="title" translate="true" xsi:type="string">How To Apply</argument>
		</arguments>
	</block> 
	<move element="productinfohowtoapply" destination="product.info.main" after="product.info.overview" />
	<move element="view.addto.wishlist" destination="product.info.media" before="skip_gallery_after.target"/> 	
	<referenceBlock name="product.attributes" remove="true" />

    </body>
</page>
